// Test basic if/else with Option types

fn check_value(value: i32) -> Option<i32> {
    if value > 0 {
        Some(value)
    } else {
        None
    }
}

fn main() {
    let positive = check_value(5);
    let zero = check_value(0);
    
    println!("Checked value 5");
    println!("Checked value 0");
}
