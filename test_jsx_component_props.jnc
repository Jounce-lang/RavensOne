struct Item {
    id: i32,
}

component Card(item: Item) {
    <div>{item.id}</div>
}

component App() {
    let loading = false;
    let items = vec![Item { id: 1 }];

    return <div>
        {loading ? (
            <div>Loading</div>
        ) : (
            <div>
                {items.iter().map(|item| {
                    <Card item={item} />
                })}
            </div>
        )}
    </div>;
}
