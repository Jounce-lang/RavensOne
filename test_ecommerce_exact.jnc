struct Product {
    id: i32,
    name: String,
}

component ProductCard(product: Product) {
    <div>{product.name}</div>
}

component App() {
    let loading = false;
    let filtered_products = vec![Product { id: 1, name: "Test".to_string() }];

    return <div class="container">
        <div class="products">
            {loading ? (
                <div class="loading">
                    <div class="spinner"></div>
                    <p>Loading products...</p>
                </div>
            ) : (
                <div class="products-grid">
                    {filtered_products.iter().map(|product| {
                        <ProductCard product={product} />
                    })}
                </div>
            )}
        </div>
    </div>;
}
