// Test Option<T> with if/else expressions

fn find_user(id: i32) -> Option<String> {
    if id == 1 {
        Some("Alice")
    } else {
        None
    }
}

fn process_user(id: i32) -> String {
    let user = find_user(id);
    match user {
        Some(name) => name,
        None => "Unknown",
    }
}

fn main() {
    println!("User 1: {}", process_user(1));
    println!("User 99: {}", process_user(99));
}
